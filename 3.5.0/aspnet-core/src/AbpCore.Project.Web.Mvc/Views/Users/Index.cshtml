@{
    ViewBag.CurrentPageName = PageNames.Users; // The menu item will be active for this page.
}
@section styles{
    @Html.Partial("~/Views/Shared/JsCssModals/bootstrapTableCss.cshtml")
    <environment names="Development">
        <link href="~/lib/bootstrap-treeview/src/css/bootstrap-treeview.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/bootstrap-treeview/src/css/bootstrap-treeview.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}
@section scripts{
    @Html.Partial("~/Views/Shared/JsCssModals/bootstrapTableJs.cshtml")
    <environment names="Development">
        <script src="~/lib/bootstrap-treeview/src/js/bootstrap-treeview.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Users/Index.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Users/_CreateUserModal.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/bootstrap-treeview/src/js/bootstrap-treeview.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Users/Index.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Users/_CreateUserModal.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="col-sm-12">
    <div class="ibox-content crm-height">
        <div id="toolbar">
            <button id="btn-add" class="btn btn-primary blue"><i class="fa fa-plus"></i> 新增</button>
            <button id="btn-del" class="btn btn-primary blue"><i class="fa fa-remove"></i> 删除</button>
        </div>
        <table id="table"></table>
    </div>
</div>
@Html.Partial("~/Views/Users/_CreateUserModal.cshtml")